<% if @user.errors.any? %>
    <div id="error">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @user do |f| %>
<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %><br><br>

<%= f.label "Please select a profile photo" %><br>
<%= f.file_field :image %><br><br>

Add
<%= f.fields_for :photos do |photo_attributes| %>
  <%= photo_attributes.label :description %>
  <%= photo_attributes.text_field :description %>
<% end %><br>

<%= f.submit "Signup"%>

<% end %>


 <h2>If you already have an account please <%= link_to(controller: 'sessions', action: 'create') { 'Login' } %> </h2>